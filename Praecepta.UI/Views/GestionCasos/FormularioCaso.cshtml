<div class="formulario contact-form contact-form-two contact-form-three">
    <div class="container">
        <div class="contact-wrap">
            <form id="contactForm" class="" method="post" action="modal">
                <h2>Formulario para caso nuevo</h2>
                <div class="row justify-content-center">
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <input type="text" name="TipoCaso" id="TipoCaso" class="form-control" required data-error="Favor ingrese el dato" placeholder="Tipo Caso">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <input type="text" name="titulo" id="titulo" class="form-control" required data-error="Favor ingrese el dato" placeholder="Título del Caso">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <input type="text" name="Pruebas" id="Pruebas" required data-error="Favor ingrese el dato" class="form-control" placeholder="Pruebas Iniciales">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6">
                        <div class="form-group">
                            <input type="text" name="NomCliente" id="NomCliente" class="form-control" required data-error="Favor ingrese el dato" placeholder="Nombre Cliente">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>                    
                    <div class="col-md-12 col-lg-12">
                        <div class="form-group">
                            <textarea name="descripcionCaso" class="form-control" id="descripcionCaso" cols="30" rows="8" required data-error="Write your message" placeholder="Descripción"></textarea>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12">

                        <div class="text-center">
                            <!-- Button trigger modal -->
                            <button type="button" class="contact-btn" data-bs-toggle="modal"  data-bs-target="#exampleModal">
                                Revisar
                            </button>
                            <button type="submit" class="contact-btn">Submit Case</button>
                        </div>
                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


